<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>

    <!-- Tabler Core CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/&#64;tabler/core@1.4.0/dist/css/tabler.min.css" />
    <!-- Custom CSS for collapsible sidebar -->
    <style>
        /* Collapsing Sidebar - Core Functionality */
        .navbar-vertical {
            transition: width 0.3s ease;
            width: 280px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            z-index: 1050;
        }

            /* Collapsed state */
            .navbar-vertical.sidebar-collapsed {
                width: 60px;
                overflow: visible; /* Important for dropdowns */
            }

                /* Hide/show elements when collapsed */
                .navbar-vertical.sidebar-collapsed .navbar-brand-autodark {
                    opacity: 0;
                    visibility: hidden;
                    transition: all 0.3s ease;
                }

                .navbar-vertical.sidebar-collapsed .nav-link-title {
                    opacity: 0;
                    visibility: hidden;
                    width: 0;
                    overflow: hidden;
                    transition: all 0.3s ease;
                }

                /* Center icons when collapsed */
                .navbar-vertical.sidebar-collapsed .nav-link {
                    justify-content: center;
                    padding-left: 1rem;
                    padding-right: 1rem;
                }

                /* Hide dropdown arrows when collapsed */
                .navbar-vertical.sidebar-collapsed .dropdown-toggle::after {
                    display: none;
                }

                /* Position dropdown menus outside collapsed sidebar */
                .navbar-vertical.sidebar-collapsed .dropdown-menu {
                    position: fixed;
                    left: 60px;
                    margin-top: -2.5rem;
                    z-index: 1060;
                    min-width: 200px;
                }

        /* Page layout adjustments */
        .page-wrapper {
            margin-left: 280px;
            transition: margin-left 0.3s ease;
            min-height: 100vh;
        }

            .page-wrapper.sidebar-collapsed {
                margin-left: 60px;
            }

        /* Top navbar adjustments */
        .navbar-expand-md {
            margin-left: 280px;
            transition: margin-left 0.3s ease;
        }

            .navbar-expand-md.sidebar-collapsed {
                margin-left: 60px;
            }

        /* Sidebar toggle button styling */
        .sidebar-toggle {
            background: none;
            border: none;
            padding: 0.5rem;
            cursor: pointer;
            border-radius: var(--tblr-border-radius, 4px);
            transition: all 0.2s ease;
        }

            .sidebar-toggle:hover {
                background-color: var(--tblr-bg-surface-secondary, rgba(0,0,0,0.05));
            }

        /* Mobile responsiveness */
        @@media (max-width: 991.98px) {
            .navbar-vertical

        {
            transform: translateX(-100%);
            width: 280px !important; /* Force normal width on mobile */
        }

        .navbar-vertical.show {
            transform: translateX(0);
        }

        .page-wrapper, .navbar-expand-md {
            margin-left: 0 !important; /* No margin on mobile */
        }

        /* Reset dropdown positioning on mobile */
        .navbar-vertical.sidebar-collapsed .dropdown-menu {
            position: absolute;
            left: 0;
            margin-top: 0;
        }

        }
    </style>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="page">
        <!-- Sidebar -->
        <aside class="navbar navbar-vertical navbar-expand-lg" id="sidebar">
            <div class="container-fluid">
                <!-- Mobile toggle button -->
                <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu" aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Brand -->
                <h1 class="navbar-brand navbar-brand-autodark">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/img/logo.svg" width="110" height="32" alt="MyApp" class="navbar-brand-image">
                    </a>
                </h1>

                <!-- Navigation Menu -->
                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <ul class="navbar-nav pt-lg-3">
                        <!-- Dashboard -->
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <span class="nav-link-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
