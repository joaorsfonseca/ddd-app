                                    </svg>
                                </span>
                                <span class="nav-link-title">Dashboard</span>
                            </a>
                        </li>

                        <!-- Products Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#navbar-extra" data-bs-toggle="dropdown" data-bs-auto-close="false" role="button" aria-expanded="false">
                                <span class="nav-link-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path d="M12 3l8 4.5l0 9l-8 4.5l-8 -4.5l0 -9l8 -4.5" />
                                        <path d="M12 12l8 -4.5" />
                                        <path d="M12 12l0 9" />
                                        <path d="M12 12l-8 -4.5" />
                                    </svg>
                                </span>
                                <span class="nav-link-title">Products</span>
                            </a>
                            <div class="dropdown-menu">
                                <div class="dropdown-menu-columns">
                                    <div class="dropdown-menu-column">
                                        <a class="dropdown-item" href="/products">
                                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M9 11l3 3l8 -8" />
                                                    <path d="M20 12v6a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h9" />
                                                </svg>
                                            </span>
                                            List Products
                                        </a>
                                        <a class="dropdown-item" href="/products/create">
                                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M12 5l0 14" />
                                                    <path d="M5 12l14 0" />
                                                </svg>
                                            </span>
                                            Create Product
                                        </a>
                                        <a class="dropdown-item" href="/products/reports">
                                            <span class="nav-link-icon d-md-none d-lg-inline-block">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none">
                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                    <path d="M3 12m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v6a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
                                                    <path d="M9 8m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v10a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
                                                    <path d="M15 4m0 1a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v14a1 1 0 0 1 -1 1h-4a1 1 0 0 1 -1 -1z" />
                                                    <path d="M4 20l14 0" />
                                                </svg>
                                            </span>
                                            Reports
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </li>

                        <!-- API Documentation -->
                        <li class="nav-item">
                            <a class="nav-link" href="/scalar/v1" target="_blank">
                                <span class="nav-link-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <path d="M7 8l-4 4l4 4" />
                                        <path d="M17 8l4 4l-4 4" />
                                        <path d="M14 4l-4 16" />
                                    </svg>
                                </span>
                                <span class="nav-link-title">API Docs</span>
                            </a>
                        </li>

                        <!-- Settings -->
                        <li class="nav-item">
                            <a class="nav-link" href="/settings">
                                <span class="nav-link-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                        <circle cx="12" cy="12" r="3" />
                                        <path d="M12 1a11 11 0 0 0 0 22a11 11 0 0 0 0 -22" />
                                        <path d="M12 7a5 5 0 0 1 5 5" />
                                    </svg>
                                </span>
                                <span class="nav-link-title">Settings</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Sticky Top Navbar -->
        <header class="navbar navbar-expand-md d-print-none sticky-top" id="top-navbar">
            <div class="container-fluid">
                <!-- Sidebar Toggle Button -->
                <div class="d-none d-lg-flex">
                    <button class="sidebar-toggle me-3" onclick="toggleSidebar()" title="Toggle Sidebar">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                </div>

                <!-- Mobile Sidebar Toggle -->
                <button class="navbar-toggler d-lg-none" type="button" onclick="toggleMobileSidebar()" aria-label="Open sidebar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Breadcrumbs / Page Title -->
                <div class="navbar-nav flex-row order-md-last">
                    <div class="d-none d-md-flex">
                        <span class="navbar-text">
                            @ViewData["Title"] ?? "Dashboard"
                        </span>
                    </div>
                </div>

                <!-- Right side navbar items -->
                <div class="navbar-nav flex-row order-md-last">
                    <!-- Notifications -->
                    <div class="nav-item dropdown d-none d-md-flex me-3">
                        <a href="#" class="nav-link px-0" data-bs-toggle="dropdown" tabindex="-1" aria-label="Show notifications">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M10 6h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                                <circle cx="17" cy="7" r="3" />
                            </svg>
                            <span class="badge bg-red"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-arrow dropdown-menu-end dropdown-menu-card">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Notifications</h3>
                                </div>
                                <div class="list-group list-group-flush list-group-hoverable">
                                    <div class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-auto">
                                                <span class="status-dot status-dot-animated bg-red d-block"></span>
                                            </div>
                                            <div class="col text-truncate">
                                                <a href="#" class="text-body d-block">New product created</a>
                                                <div class="d-block text-muted text-truncate mt-n1">2 minutes ago</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- User Menu -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <div class="page-wrapper" id="page-wrapper">
            <!-- Page Header -->
            <div class="page-header d-print-none">
                <div class="container-fluid">
                    <div class="row g-2 align-items-center">
                        <div class="col">
                            <div class="page-pretitle">Overview</div>
                            <h2 class="page-title">@ViewData["Title"]</h2>
                        </div>
                        <!-- Page Actions -->
                        <div class="col-auto ms-auto d-print-none">
                            @RenderSection("PageActions", required: false)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Page Body -->
            <div class="page-body">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/&#64;tabler/core@1.4.0/dist/js/tabler.min.js"></script>
    <script>
        // Sidebar collapse functionality - Focused and Clean
        let sidebarCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';

        function toggleSidebar() {
            // Get all elements that need to be updated
            const sidebar = document.getElementById('sidebar');
            const pageWrapper = document.getElementById('page-wrapper') || document.querySelector('.page-wrapper');
            const topNavbar = document.getElementById('top-navbar') || document.querySelector('.navbar-expand-md');

            // Check if elements exist
            if (!sidebar) {
                console.error('Sidebar element not found');
                return;
            }

            // Toggle the collapsed state
            sidebarCollapsed = !sidebarCollapsed;

            // Apply/remove collapsed classes
            if (sidebarCollapsed) {
                sidebar.classList.add('sidebar-collapsed');
                if (pageWrapper) pageWrapper.classList.add('sidebar-collapsed');
                if (topNavbar) topNavbar.classList.add('sidebar-collapsed');
            } else {
                sidebar.classList.remove('sidebar-collapsed');
                if (pageWrapper) pageWrapper.classList.remove('sidebar-collapsed');
                if (topNavbar) topNavbar.classList.remove('sidebar-collapsed');
            }

            // Save state to localStorage
            localStorage.setItem('sidebar-collapsed', sidebarCollapsed.toString());
        }

        function toggleMobileSidebar() {
            const sidebar = document.getElementById('sidebar');
            if (sidebar) {
                sidebar.classList.toggle('show');
            }
        }

        // Initialize sidebar state on page load
        document.addEventListener('DOMContentLoaded', function() {
            if (sidebarCollapsed) {
                // Apply collapsed state immediately on load
                const sidebar = document.getElementById('sidebar');
                const pageWrapper = document.getElementById('page-wrapper') || document.querySelector('.page-wrapper');
                const topNavbar = document.getElementById('top-navbar') || document.querySelector('.navbar-expand-md');

                if (sidebar) sidebar.classList.add('sidebar-collapsed');
                if (pageWrapper) pageWrapper.classList.add('sidebar-collapsed');
                if (topNavbar) topNavbar.classList.add('sidebar-collapsed');
            }
        });

        // Close mobile sidebar when clicking outside (mobile only)
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const mobileToggle = document.querySelector('.navbar-toggler');

            // Only handle mobile sidebar closing
            if (window.innerWidth < 992 && sidebar && mobileToggle) {
                if (!sidebar.contains(event.target) &&
                    !mobileToggle.contains(event.target) &&
                    sidebar.classList.contains('show')) {
                    sidebar.classList.remove('show');
                }
            }
        });

        // Handle window resize - clean up mobile states
        window.addEventListener('resize', function() {
            const sidebar = document.getElementById('sidebar');
            if (sidebar && window.innerWidth >= 992) {
                // Remove mobile show class on desktop
                sidebar.classList.remove('show');
            }
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>